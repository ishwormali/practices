@inherits System.Web.Mvc.WebViewPage<List<string>>
@using System.Web.Mvc
@using System.Web.Mvc.Html
@using System.Web.Optimization
@using System.Web.Routing

@{
    ViewBag.Title = "CollectionSimpleType";
}

<h2>CollectionSimpleType</h2>
@{
    var coll = Model ?? new List<string>();
    
}
@using (Html.BeginForm())
{
    

<table>
    <tr>
        <th>Item</th>
       
        <th>Remove</th>
    </tr>

    @for (int i = 0; i < coll.Count(); i++)
    {
        var mod = coll[i];
        <tr>
            <td>
              @*  <input type="hidden" name="coll.index" value="@i" />*@
                <input type="text" name="coll[@i]"  value="@mod" />
                @*<input type="text" name="coll"  value="@mod" />*@
            </td>
           
            <td>
                <input type="button" value="REMOVE" onclick="removeItem(this);" />
            </td>
        </tr>
    }

</table>
    <input type="submit" value="Save" />
}
<script type="text/javascript">
    function removeItem(btn) {
        var wholeTR = $(btn).parents('tr');
        console.log(wholeTR);
        wholeTR.remove();
    }
</script>