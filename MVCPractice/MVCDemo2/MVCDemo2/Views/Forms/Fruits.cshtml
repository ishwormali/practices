@model string[]

@{
    ViewBag.Title = "Fruits";
}

<h2>Fruits</h2>

@{
var fruits=Model??new string[0];    

}

@using (Html.BeginForm("SaveFruits","Forms"))
{
    

<table>
    <tr>
        <th>Item</th>
       
        <th>Remove</th>
    </tr>

    @for (int i = 0; i < fruits.Count(); i++)
    {
        var mod = fruits[i];
        <tr>
            <td>
              @*  <input type="hidden" name="coll.index" value="@i" />*@
              @*  <input type="text" name="fruits[@i]"  value="@mod" />*@
                <input type="text" name="fruits"  value="@mod" />
            </td>
           
            <td>
                <input type="button" value="REMOVE" onclick="removeItem(this);" />
            </td>
        </tr>
    }

</table>
    <input type="submit" value="Save" />
}
<script type="text/javascript">
    function removeItem(btn) {
        var wholeTR = $(btn).parents('tr');
        console.log(wholeTR);
        wholeTR.remove();
    }
</script>