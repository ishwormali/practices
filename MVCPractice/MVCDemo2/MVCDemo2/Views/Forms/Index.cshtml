
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Save", "Forms"))
{
    
    <label >Name: </label>
    <input type="text" name="Name" />
    <br />
    
    <label >Address: </label>
    <input type="text" name="Address" />
    <br />
    
    <label >Age: </label>
    <input type="number" name="Age" value="20" />
    <br />

    <label>Registration Date</label>
   
    <input type="date" value="08/27/2013" name="RegistrationDate"/>
    <br />
    
    <label style="font-weight:bold">Married? </label>
    <input type="checkbox" name="IsMarried" value="True" />
    <br />
    
    <label>Gender</label><input type="radio" value="Male" name="Gender" style="width:5px;"  checked /><text>Male</text>
    <input type="radio" value="Female" name="Gender" style="width:5px;"  /><text>Female</text>
    <br />
    
    <label>Hobbies</label>
    <input type="checkbox" name="Hobbies" value="Football" />@:Football
    <input type="checkbox" name="Hobbies" value="Basketball"/>@:Basketball
    <input type="checkbox" name="Hobbies" value="Music"/>@:Music
        <br />
    
    <input type="submit" value="submit" />
}

<br />


